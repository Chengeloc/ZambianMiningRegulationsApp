<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/CardStyle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appointment_details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All statutory appointments and their responsibilities"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- Filter Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/filter_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All"
            android:background="@drawable/button_primary_background"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginEnd="4dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/filter_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Managers"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/filter_engineer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Engineers"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginStart="4dp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Appointments List -->
    <ListView
        android:id="@+id/appointments_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        android:padding="8dp" />

</LinearLayout>

