<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Mining Regulations Logo" />

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            style="@style/WelcomeTitle" />

        <TextView
            android:id="@+id/welcome_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_subtitle"
            style="@style/WelcomeSubtitle" />

        <TextView
            android:id="@+id/pocket_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pocket_guide"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="32dp" />

        <!-- Search Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/CardStyle"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_hint"
                style="@style/InputStyle"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_button"
                style="@style/ButtonPrimary" />

        </LinearLayout>

        <!-- Main Navigation Buttons -->
        <Button
            android:id="@+id/appointments_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appointments_button"
            android:drawableStart="@drawable/ic_list"
            android:drawablePadding="8dp"
            style="@style/ButtonPrimary" />

        <Button
            android:id="@+id/ai_assistant_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_assistant"
            android:drawableStart="@drawable/ic_assistant"
            android:drawablePadding="8dp"
            style="@style/ButtonSecondary" />

        <Button
            android:id="@+id/diagrams_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagrams"
            android:drawableStart="@drawable/ic_diagram"
            android:drawablePadding="8dp"
            style="@style/ButtonPrimary" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_button"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/colorOnPrimary"
            android:textSize="18sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Footer Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/CardStyle"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developed_by"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_info"
                android:textSize="16sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_edition"
                android:textSize="14sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_guide"
                android:textSize="14sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_contact"
                android:textSize="14sp"
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

